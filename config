## STARTUP AUTOEXEC
# feh for background. keep bg.jpeg in ~/.config/i3/
exec --no-startup-id feh --no-fehbg --bg-scale '/home/olga/.config/i3/bg.jpeg'

# set xresources to fix xterm colors
exec --no-startup-id xrdb ~/.Xresources

# set xinput to enable horizontal scrolling for shimeji touchpad
exec --no-startup-id xinput --set-prop 10 "Synaptics Two-Finger Scrolling" 1 1

# bucklespring for key clickies
exec --no-startup-id buckle -fg 10 -s 0

# unclutter & xbanish to hide mouse cursor when unnecessary
exec --no-startup-id unclutter
exec --no-startup-id xbanish

# xfce4-notifyd as notification daemon
exec --no-startup-id /usr/lib/x86_64-linux-gnu/xfce4/notifyd/xfce4-notifyd
exec --no-startup-id notify-send 'xfce4-notifyd' 'notification daemon loaded'

# capture screen region with scrot, copy to clipboard + save to folder
bindsym --release $mod+Print exec --no-startup-id scrot -s '%F_%s.png' -e 'xclip -selection clip -t image/png "$f" && mv "$f" ~/Pictures/capture'

# same as above, but a fullscreen capture
bindsym --release $mod+Shift+Print exec --no-startup-id scrot '%F_%s.png' -e 'xclip -selection clip -t image/png "$f" && mv "$f" ~/Pictures/desktop'

# set border + titles to be hidden, unless stacked/tabbed
default_border pixel 0
default_floating_border pixel 0

# sets gap sizes between open windows
gaps inner 5
gaps outer 0
