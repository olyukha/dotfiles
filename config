# quicklaunchers
set $mode_quicklaunch [d]iscord, [v]ivaldi (opens a new window if one is open), [s]team, [p]cmanfm, create [b]lank space
bindsym $mod+o mode "$mode_quicklaunch"

mode "$mode_quicklaunch" {
	bindsym d exec --no-startup-id dbus-launch --exit-with-session discord --no-sandbox
	bindsym v exec --no-startup-id vivaldi
	bindsym s exec --no-startup-id steam
	bindsym p exec --no-startup-id pcmanfm
	bindsym b exec --no-startup-id i3-msg open

	bindsym Escape mode "default"
	bindsym Return mode "default"
	bindsym $mod+o mode "default"
}

for_window [class="Pcmanfm"] border pixel 2, floating enabled
for_window [class="Pcmanfm"] resize set 960 600, move position center

set $mode_bookmarks [t]witter, [y]outube, [s]potify
bindsym $mod+p mode "$mode_bookmarks"

mode "$mode_bookmarks" {
	bindsym t exec --no-startup-id vivaldi --app=https://twitter.com/
	bindsym y exec --no-startup-id vivaldi --app=https://youtube.com/
	bindsym s exec --no-startup-id vivaldi --app=https://open.spotify.com/

	bindsym Escape mode "default"
	bindsym Return mode "default"
	bindsym $mod+p mode "default"
}

